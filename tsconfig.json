{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 18",

    "compilerOptions": {
        "lib": ["es2022", "dom"],
        "module": "es6",
        "target": "es2022",

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,

        "outDir": "lib"
    },
    "include": ["src/**/*"]
}
